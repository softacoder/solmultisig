{
  "compilerOptions": {
    "target": "es6", // Set to ES6 or higher
    "module": "esnext", // Use ES modules
    "lib": ["dom", "es6", "dom.iterable", "scripthost"], // Include standard libraries
    "jsx": "react-jsx", // For React projects, ensure correct JSX handling
    "moduleResolution": "node", // Resolve modules like Node.js
    "esModuleInterop": true, // Enable compatibility with CommonJS
    "resolveJsonModule": true, // Allow importing .json files
    "allowSyntheticDefaultImports": true, // Allow default imports from CommonJS
    "skipLibCheck": true, // Skip library checks for faster compilation
    "strict": true, // Enable all strict type-checking options
    "typeRoots": [
      "node_modules/@types", // Standard type declaration directory
      "node_modules/@coral-xyz/anchor/types" // Ensure Anchor's types are included
    ],
    "types": [
      "mocha", // Include testing library types if needed
      "chai" // Include Chai assertions
    ]
  },
  "include": [
    "app", // Include app source files
    "tests", // Include tests folder
    "programs", // Include Solana programs
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx" // Include all TypeScript React files
  ],
  "exclude": [
    "node_modules", // Exclude node_modules from compilation
    "dist", // Exclude dist folder
    ".anchor" // Exclude .anchor directory generated by Anchor
  ]
}
